{% extends "AcmeDemoBundle::layout.html.twig" %}

{% block title "Flight" ~ flight.id %}

{% block content %}
    <h1>Flight {{ flight.id }}</h1>

	<dl>
		<dt>Cost:</dt>
		<dd>{{ flight.cost }}</dd>
		
		<dt>From:</dt>
		<dd><a href="{{ path('managed_city', {id: flight.origin.id}) }}">{{ flight.origin.name }}</a></dd>
		
		<dt>To:</dt>
		<dd><a href="{{ path('managed_city', {id: flight.destination.id}) }}">{{ flight.destination.name }}</a></dd>
	</dl>

	<a href="{{ path('demo_node', {id: flight.id}) }}">Node</a>
{% endblock %}

{% set code = code(_self) %}
